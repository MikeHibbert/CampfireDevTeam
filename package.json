{
  "name": "campfire-dev-agent",
  "displayName": "CampfireDevAgent",
  "description": "AI-driven development assistant that integrates with CampfireValley backend",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onCommand:campfire.generateCode",
    "onCommand:campfire.reviewCode",
    "onView:campfire.chatPanel"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "campfire.generateCode",
        "title": "Campfire: Generate Code"
      },
      {
        "command": "campfire.reviewCode",
        "title": "Campfire: Review Code"
      },
      {
        "command": "campfire.openChat",
        "title": "Campfire: Open Chat",
        "icon": "$(comment-discussion)"
      }
    ],
    "views": {
      "explorer": [
        {
          "type": "webview",
          "id": "campfire.chatPanel",
          "name": "Campfire Chat",
          "icon": "$(flame)",
          "contextualTitle": "CampfireDevTeam"
        }
      ]
    },
    "viewsWelcome": [
      {
        "view": "campfire.chatPanel",
        "contents": "Welcome to CampfireDevTeam! ðŸ”¥\n\nYour AI development team is ready to help.\n\n[Start Chatting](command:campfire.openChat)\n\nOr use the commands:\n- Generate Code (Ctrl+Shift+G)\n- Review Code (Ctrl+Shift+R)"
      }
    ],
    "keybindings": [
      {
        "command": "campfire.generateCode",
        "key": "ctrl+shift+g",
        "mac": "cmd+shift+g"
      },
      {
        "command": "campfire.reviewCode",
        "key": "ctrl+shift+r",
        "mac": "cmd+shift+r"
      }
    ],
    "configuration": {
      "title": "Campfire",
      "properties": {
        "campfire.mcpServer": {
          "type": "string",
          "default": "http://localhost:8080/mcp",
          "description": "MCP server URL for CampfireValley backend",
          "pattern": "^https?://[^\\s/$.?#].[^\\s]*$",
          "patternErrorMessage": "Must be a valid HTTP or HTTPS URL",
          "examples": [
            "http://localhost:8080/mcp",
            "https://campfire.example.com/mcp"
          ]
        },
        "campfire.partyBoxPath": {
          "type": "string",
          "default": "./party_box",
          "description": "Path to Party Box storage directory (relative to workspace root)",
          "pattern": "^[^<>:\"|?*]+$",
          "patternErrorMessage": "Path cannot contain invalid characters: < > : \" | ? *",
          "examples": [
            "./party_box",
            "../shared/party_box",
            "/tmp/campfire/party_box"
          ]
        },
        "campfire.defaultPrompt": {
          "type": "string",
          "default": "Build code for {task} on {os}",
          "description": "Default prompt template for code generation. Use {task} and {os} as placeholders",
          "minLength": 10,
          "maxLength": 500,
          "examples": [
            "Build code for {task} on {os}",
            "Generate {task} implementation for {os} platform",
            "Create production-ready code for {task} optimized for {os}"
          ]
        },
        "campfire.enableAutoCompletion": {
          "type": "boolean",
          "default": true,
          "description": "Enable automatic code completion suggestions from Campfire"
        },
        "campfire.responseTimeout": {
          "type": "number",
          "default": 30000,
          "minimum": 5000,
          "maximum": 120000,
          "description": "Timeout for backend responses in milliseconds (5-120 seconds)"
        },
        "campfire.retryAttempts": {
          "type": "number",
          "default": 3,
          "minimum": 1,
          "maximum": 10,
          "description": "Number of retry attempts for failed requests"
        },
        "campfire.logLevel": {
          "type": "string",
          "enum": ["error", "warn", "info", "debug"],
          "default": "info",
          "description": "Logging level for Campfire extension"
        },
        "campfire.securityValidation": {
          "type": "boolean",
          "default": true,
          "description": "Enable security validation for generated code and commands"
        },
        "campfire.workspaceValidation": {
          "type": "boolean",
          "default": true,
          "description": "Validate that all file operations stay within workspace boundaries"
        },
        "campfire.confirmFileOverwrites": {
          "type": "boolean",
          "default": true,
          "description": "Show confirmation dialog before overwriting existing files"
        },
        "campfire.maxFileSize": {
          "type": "number",
          "default": 1048576,
          "minimum": 1024,
          "maximum": 10485760,
          "description": "Maximum file size in bytes for Party Box attachments (1KB - 10MB)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "test": "npm run compile && node ./out/test/runTest.js",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "@types/mocha": "^10.0.3",
    "@typescript-eslint/eslint-plugin": "^6.9.0",
    "@typescript-eslint/parser": "^6.9.0",
    "@vscode/test-electron": "^2.3.6",
    "eslint": "^8.52.0",
    "glob": "^10.3.10",
    "mocha": "^10.2.0",
    "typescript": "^4.9.4"
  }
}